<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsj.medical2025.mapper.PermissionMapper">
    <resultMap id="selectMap" type="com.wsj.medical2025.pojo.Permission">
        <id property="id" column="id"/>
        <result property="pid" column="pid"/>
        <result property="name" column="name"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="level" column="level"/>
        <result property="title" column="title"/>
    </resultMap>

    <select id="getPermissionsByRoleName" resultMap="selectMap">
        select p.* from role_permission rp, permission p
        where rp.per_id = p.id and rp.roleName = #{roleName}
    </select>
</mapper>